@model IEnumerable<Proyecto_ExpedicionOxigeno.Models.Sello>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Mis Sellos";
    var estadisticas = ViewBag.Estadisticas as Proyecto_ExpedicionOxigeno.Services.EstadisticasSellos;
    bool esAdmin = User.IsInRole("Administrador");
}

<div class="container mt-4">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success text-center mb-4">
            <i class="fas fa-check-circle me-2"></i>@TempData["Mensaje"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center mb-4">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        </div>
    }

    <h2><i class="fas fa-stamp"></i> Mis Sellos de Expedición</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@estadisticas.SellosActivos</h3>
                    <p>Sellos Activos</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@estadisticas.SellosTotal</h3>
                    <p>Sellos Totales</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@estadisticas.SellosRestantes</h3>
                    <p>Sellos para Pase</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-trophy"></i> Progreso hacia Pase de Expedición</h5>
        </div>
        <div class="card-body">
            <div class="progress mb-2">
                <div class="progress-bar" role="progressbar"
                     style="width: @( ((estadisticas.SellosActivos * 100) / 5) <= 100 ? ((estadisticas.SellosActivos * 100) / 5) : 100 )%"
                     aria-valuenow="@estadisticas.SellosActivos"
                     aria-valuemin="0"
                     aria-valuemax="5">
                    @estadisticas.SellosActivos/5
                </div>
            </div>
            <small class="text-muted">
                @if (estadisticas.SellosRestantes > 0)
                {
                    <span>Te faltan @estadisticas.SellosRestantes @(estadisticas.SellosRestantes==1?"sello":"sellos") para obtener un pase gratuito</span>
                }
                else
                {
                    <span class="text-success">¡Ya tienes suficientes sellos para generar un pase!</span>
                }
            </small>
        </div>
    </div>

    @if (esAdmin)
    {
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(90deg,#fa8f23,#28a745); color: #fff;">
                <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Administrar Sellos Manualmente</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h6 class="mb-2 text-success"><i class="fas fa-plus-circle me-2"></i>Otorgar Sello</h6>
                        @using (Html.BeginForm("OtorgarSelloManual", "Sello", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" name="userId" class="form-control mb-2" placeholder="ID de usuario" required />
                            <button type="submit" class="btn btn-Primary-ExpOxi w-100">
                                <i class="fas fa-plus"></i> Otorgar sello
                            </button>
                        }
                    </div>
                    <div class="col-md-6">
                        <h6 class="mb-2 text-danger"><i class="fas fa-trash-alt me-2"></i>Eliminar Último Sello</h6>
                        @using (Html.BeginForm("EliminarUltimoSelloUsuario", "Sello", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" name="userId" class="form-control mb-2" placeholder="ID de usuario" required />
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fas fa-trash"></i> Eliminar último sello
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-history"></i> Historial de Sellos</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Servicio</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sello in Model)
                            {
                                <tr>
                                    <td>@sello.FechaObtencion.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@sello.Servicio</td>
                                    <td>
                                        @if (sello.UsadoEnPase)
                                        {
                                            <span class="badge badge-secondary">Usado en Pase</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Disponible</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary"
                                                onclick="mostrarQR('@sello.CodigoQR')">
                                            <i class="fas fa-qrcode"></i> Ver QR
                                        </button>
                                        @if (esAdmin)
                                        {
                                            using (Html.BeginForm("EliminarSello", "Sello", FormMethod.Post, new { @class = "d-inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@sello.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger ms-1">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-stamp fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No tienes sellos aún</h5>
                    <p class="text-muted">Completa una reserva y valida tu código QR para obtener tu primer sello</p>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal" id="qrModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Código QR del Sello</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="qrImage" src="" alt="Código QR" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<script>
function mostrarQR(codigo) {
    document.getElementById('qrImage').src = '@Url.Action("GenerarQR", "Sello")?codigo=' + codigo;
    var modal = new bootstrap.Modal(document.getElementById('qrModal'), { backdrop: false });
    modal.show();
}
</script>