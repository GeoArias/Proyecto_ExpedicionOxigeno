            // 1. Primero, recalculemos los contadores basados en las tarjetas reales en el DOM
            let totalTarjetas = 0;
            let tarjetasConResena = 0;
            let tarjetasSinResena = 0;

            // Contar las tarjetas y su estado real
            $('#reservasPasadasContainer .col').each(function () {
                totalTarjetas++;
                var hasReview = $(this).attr('data-has-review') === 'true';
                if (hasReview) {
                    tarjetasConResena++;
                } else {
                    tarjetasSinResena++;
                }
            });

            // Actualizar los contadores en la interfaz con los valores reales
            $('#totalReservas').text(totalTarjetas);
            $('#reservasConResena').text(tarjetasConResena);
            $('#reservasPendientes').text(tarjetasSinResena);

            // Diagnóstico en la consola
            console.log("=== DIAGNÓSTICO DE RESEÑAS ===");
            console.log("Total tarjetas pasadas:", totalTarjetas);
            console.log("Con reseña:", tarjetasConResena);
            console.log("Sin reseña:", tarjetasSinResena);

            // 2. Implementar filtrado mejorado
            $('#counterAll').addClass('active'); // Activar "Todas" por defecto

            $('.counter-box.clickable').click(function () {
                // Quitar active de todos los contadores
                $('.counter-box.clickable').removeClass('active');
                // Añadir active al actual
                $(this).addClass('active');

                var filtro = $(this).data('filter');
                console.log("Aplicando filtro:", filtro);

                var elementosVisibles = 0;

                $('#reservasPasadasContainer .col').each(function () {
                    // La comparación debe ser con 'true' como string, ya que el atributo es string
                    var tieneResena = $(this).attr('data-has-review') === 'true';

                    // Aplicar filtro según corresponda
                    var mostrar = false;
                    if (filtro === 'todas') {
                        mostrar = true;
                    } else if (filtro === 'conResena' && tieneResena) {
                        mostrar = true;
                    } else if (filtro === 'sinResena' && !tieneResena) {
                        mostrar = true;
                    }

                    // Aplicar visibilidad
                    if (mostrar) {
                        $(this).removeClass('d-none');
                        elementosVisibles++;
                    } else {
                        $(this).addClass('d-none');
                    }
                });

                // Mostrar mensaje de no resultados si corresponde
                if (elementosVisibles === 0) {
                    $('#noResultsMessage').removeClass('d-none');
                } else {
                    $('#noResultsMessage').addClass('d-none');
                }

                console.log(`Filtro: ${filtro} - Elementos visibles: ${elementosVisibles}`);
            });
        });
    </script>
