    /* Make counter boxes clickable */
    .counter-box.clickable {
        cursor: pointer;
        position: relative;
    }

        .counter-box.clickable::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255,255,255,0);
            transition: background-color 0.2s;
            border-radius: 15px;
            z-index: 1;
        }

