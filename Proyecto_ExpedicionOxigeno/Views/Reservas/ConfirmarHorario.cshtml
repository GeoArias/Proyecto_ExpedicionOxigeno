@model dynamic
@{
    ViewBag.Title = "Confirmar reserva";
    var servicio = ViewBag.Servicio as Microsoft.Graph.Models.BookingService;
    var slotStart = (DateTime)ViewBag.SlotStart;
    var slotEnd = (DateTime)ViewBag.SlotEnd;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4>@servicio.DisplayName</h4>
                <p class="text-muted mb-0">
                    Duración:
                    @if (servicio.DefaultDuration.Value.TotalHours >= 1)
                    {
                        @($"{Math.Floor(servicio.DefaultDuration.Value.TotalHours)} horas {servicio.DefaultDuration.Value.Minutes} minutos")
                    }
                    else
                    {
                        @($"{servicio.DefaultDuration.Value.Minutes} minutos")
                    }
                    | Precio: @string.Format("{0:C}", servicio.DefaultPrice)
                </p>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <strong>Horario seleccionado:</strong>
                    @slotStart.ToString("dd/MM/yyyy") | @slotStart.ToString("HH:mm") - @slotEnd.ToString("HH:mm")
                </div>

                <form action="@Url.Action("ConfirmarReserva", "Reservas")" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="serviceId" value="@servicio.Id" />
                    <input type="hidden" name="slotStart" value="@slotStart" />
                    <input type="hidden" name="slotEnd" value="@slotEnd" />

                    <div class="form-group mb-3">
                        <label for="nombre">Nombre completo:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="telefono">Teléfono:</label>
                        <input type="tel" class="form-control" id="telefono" name="telefono" required>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success">Confirmar reserva</button>
                        <a href="@Url.Action("SeleccionarServicio", "Reservas", new { id = servicio.Id, fecha = slotStart.Date })" class="btn btn-secondary">Cambiar horario</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Información</h4>
            </div>
            <div class="card-body">
                <p>Por favor complete todos los campos para confirmar su reserva.</p>
                <hr>
                <p>Si necesitas cancelar o modificar tu reserva, contáctanos con al menos 24 horas de anticipación.</p>
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Reservas")" class="btn btn-outline-secondary">
                        Cambiar servicio o fecha
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>