@model Proyecto_ExpedicionOxigeno.Models.BookingAppointmentCustomed
@{
    ViewBag.Title = "Nueva Reseña";
}
<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="review-form-card shadow animate__animated animate__fadeIn">
                <div class="text-center mb-4">
                    <div class="section-badge mb-2" style="font-size:1rem;">¡TU OPINIÓN NOS IMPORTA!</div>
                    <h2 class="section-title mb-2" style="font-size:2rem;">¿Qué te pareció la experiencia en <span class="text-highlight">@ViewBag.ServiceName</span>?</h2>
                    <p class="section-text mb-0" style="color:#6c757d;">Dejá tu reseña para ayudar a otros visitantes y mejorar nuestro servicio.</p>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                else
                {
                    using (Html.BeginForm("New", "Reviews", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="reservaId" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="Calificacion" class="form-label">Calificación</label>
                            <select class="form-select" id="Calificacion" name="calificacion" required>
                                <option value="">Seleccione una calificación</option>
                                <option value="5">★★★★★ - Excelente</option>
                                <option value="4">★★★★☆ - Muy bueno</option>
                                <option value="3">★★★☆☆ - Bueno</option>
                                <option value="2">★★☆☆☆ - Regular</option>
                                <option value="1">★☆☆☆☆ - Malo</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Comentario" class="form-label">Comentario</label>
                            <textarea class="form-control" id="Comentario" name="comentario" rows="4" required></textarea>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-Primary-ExpOxi px-4">
                                <i class="fas fa-paper-plane me-2"></i>Enviar reseña
                            </button>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</main>

<style>
    .review-form-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.07);
        padding: 40px 30px 30px 30px;
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .section-badge {
        display: inline-block;
        background-color: rgba(250, 143, 35, 0.1);
        color: #fa8f23;
        font-weight: 700;
        font-size: 0.9rem;
        padding: 8px 18px;
        border-radius: 50px;
        margin-bottom: 10px;
        letter-spacing: 1px;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 10px;
    }

    .text-highlight {
        color: #fa8f23;
    }

    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-start;
        gap: 2px;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            cursor: pointer;
            font-size: 2rem;
            color: #ddd;
            transition: color 0.2s;
            padding: 0 2px;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107;
            }

        .star-rating input:focus ~ label {
            color: #fa8f23;
        }

    @@media (max-width: 768px) {
        .review-form-card {
            padding: 20px 10px;
        }

        .section-title {
            font-size: 1.3rem;
        }
    }
</style>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["Mensaje"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: '¡Gracias por tu reseña!',
                html: 'Una vez verificada, será mostrada en la página principal.',
                confirmButtonColor: '#fa8f23',
                confirmButtonText: 'Aceptar'
            });
        </script>
    }
}
