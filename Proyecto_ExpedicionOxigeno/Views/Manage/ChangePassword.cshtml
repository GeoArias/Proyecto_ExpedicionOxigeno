@model Proyecto_ExpedicionOxigeno.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}

<main class="container py-4">
    <section class="section-padding">
        <div class="text-center mb-5">
            <div class="section-badge">SEGURIDAD</div>
            <h2 class="section-title">Cambiar Contraseña</h2>
            <p class="section-text">Actualiza tu contraseña para mantener segura tu cuenta</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                    <div class="card-header text-white py-3" style="background-color: #100b2c;">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-lock me-2 fa-lg"></i>
                            <h5 class="mb-0">Actualizar contraseña</h5>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "needs-validation", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger mb-4" })

                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Contraseña actual" })
                                @Html.LabelFor(m => m.OldPassword, new { @class = "form-label" })
                                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Contraseña nueva" })
                                @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirme la contraseña nueva" })
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Tu contraseña debe tener al menos 6 caracteres y contener una combinación de letras y números.
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check-circle me-2"></i>Cambiar contraseña
                                </button>
                                <a href="@Url.Action("Profile", "Manage")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Volver al perfil
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .section-badge {
        display: inline-block;
        background-color: rgba(250, 143, 35, 0.1);
        color: #fa8f23;
        font-weight: 700;
        font-size: 0.9rem;
        padding: 8px 18px;
        border-radius: 50px;
        margin-bottom: 16px;
        letter-spacing: 1px;
    }

    .section-title {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 18px;
        color: #212529;
    }

    .section-text {
        font-size: 1.1rem;
        color: #6c757d;
        max-width: 700px;
        margin: 0 auto 30px auto;
    }

    .section-padding {
        padding: 40px 0;
    }

    .btn-success {
        background-color: #fa8f23;
        border-color: #fa8f23;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #e57f13;
            border-color: #e57f13;
            transform: translateY(-2px);
        }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #fa8f23;
    }

    .form-control:focus {
        border-color: #fa8f23;
        box-shadow: 0 0 0 0.25rem rgba(250, 143, 35, 0.25);
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 1.8rem;
        }
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}