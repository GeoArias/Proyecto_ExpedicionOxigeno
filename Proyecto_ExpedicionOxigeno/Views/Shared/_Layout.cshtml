        }
        @@media (min-width: 1200px) {
            .navbar .container-fluid { padding-right: 3rem; } /* un poco más en XL */
        }
        @@media (min-width: 1400px) {
            .navbar .container-fluid { padding-right: 3.5rem; } /* y aún más en XXL */
        }

        /* Empuja el bloque derecho (usuario + icono) hacia el centro en pantallas grandes */
        .right-nav-shift { }
        @@media (min-width: 1200px) {
            .right-nav-shift { margin-right: clamp(48px, 7vw, 160px); }
        }
        @@media (min-width: 1600px) {
            .right-nav-shift { margin-right: clamp(80px, 9vw, 240px); }
