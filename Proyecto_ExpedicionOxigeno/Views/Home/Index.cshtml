    <!-- CTA Banner -->
    <section class="cta-banner">
        <div class="cta-overlay"></div>
        <div class="container">
            <div class="cta-content">
                <h2>¿Estás listo para la aventura?</h2>
                <p>Reserva ahora y vive una experiencia inolvidable</p>
                <a href="/reservas" class="btn btn-Primary-ExpOxi btn-lg animate__animated animate__pulse animate__infinite animate__slower">
                    <i class="fas fa-calendar-check me-2"></i>¡Reserva Ahora!
                </a>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="experiencias" class="section-padding">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-badge">NUESTRAS ACTIVIDADES</div>
                <h2 class="section-title">Experiencias que te Esperan</h2>
                <p class="section-text">Descubre las emocionantes actividades que tenemos para ti</p>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @if (ViewBag.Servicios != null)
                {
                    foreach (var servicio in ViewBag.Servicios)
                    {
                        string iconClass = "fas fa-tree";

                        if (servicio.DisplayName.Contains("Escalada"))
                        {
                            iconClass = "fas fa-mountain";
                        }
                        else if (servicio.DisplayName.Contains("Cuerdas"))
                        {
                            iconClass = "fas fa-route";
                        }
                        else if (servicio.DisplayName.Contains("Glider"))
                        {
                            iconClass = "fas fa-wind";
                        }

                        <div class="col">
                            <div class="service-card">
                                <div class="service-icon">
                                    <i class="@iconClass"></i>
                                </div>
                                <h4 class="service-title">@servicio.DisplayName</h4>
                                <p class="service-description">@servicio.Description</p>
                                <div class="service-meta">
                                    <div class="service-duration">
                                        <i class="far fa-clock"></i>
                                        @if (servicio.DefaultDuration.TotalHours >= 1)
                                        {
                                            @($"{Math.Floor(servicio.DefaultDuration.TotalHours)}h {servicio.DefaultDuration.Minutes}m")
                                        }
                                        else
                                        {
                                            @($"{servicio.DefaultDuration.Minutes}m")
                                        }
                                    </div>
                                    <div class="service-price">
                                        <i class="fas fa-tag"></i>
                                        ₡@string.Format("{0:N0}", servicio.DefaultPrice)
                                    </div>
                                </div>
                                <a href="/reservas" class="btn-service-reserve">
                                    <i class="fas fa-calendar-check me-2"></i>Reservar
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h5>No hay servicios disponibles</h5>
                            <p>Por favor intenta más tarde o contáctanos directamente.</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- How it Works -->
    <section class="section-padding">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-badge">PROCESO SIMPLE</div>
                <h2 class="section-title">¿Cómo Funciona?</h2>
                <p class="section-text">Reservar una actividad es rápido y sencillo</p>
            </div>

            <div class="steps-container">
                <div class="step-line"></div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="step-box">
                            <div class="step-number">1</div>
                            <div class="step-icon">
                                <i class="fas fa-mouse-pointer"></i>
                            </div>
                            <h4>Elige</h4>
                            <p>Selecciona la actividad que más te guste</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="step-box">
                            <div class="step-number">2</div>
                            <div class="step-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <h4>Reserva</h4>
                            <p>Escoge fecha y hora disponible</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="step-box">
                            <div class="step-number">3</div>
                            <div class="step-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <h4>Confirma</h4>
                            <p>Recibe la confirmación por email</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="step-box">
                            <div class="step-number">4</div>
                            <div class="step-icon">
                                <i class="fas fa-smile-beam"></i>
                            </div>
                            <h4>¡Disfruta!</h4>
                            <p>Vive la experiencia y diviértete</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <a href="/reservas" class="btn btn-Primary-ExpOxi btn-lg">
                    <i class="fas fa-calendar-check me-2"></i>Reservar Ahora
                </a>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section id="resenas" class="section-padding">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-badge">OPINIONES</div>
                <h2 class="section-title">Lo que Dicen Nuestros Visitantes</h2>
                <p class="section-text">Conoce las experiencias de quienes ya han vivido la aventura</p>
            </div>

            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="filter-card mb-4">
                        <h5><i class="fas fa-filter me-2"></i>Filtrar reseñas</h5>
                        <form method="get" action="/Home/Index#resenas" class="row g-3">
                            <div class="col-md-6">
                                <label for="calificacionFiltro" class="form-label">Calificación</label>
                                <select id="calificacionFiltro" name="calificacion" class="form-select">
                                    <option value="">Todas</option>
                                    <option value="5">★★★★★</option>
                                    <option value="4">★★★★☆ o más</option>
                                    <option value="3">★★★☆☆ o más</option>
                                    <option value="2">★★☆☆☆ o más</option>
                                    <option value="1">★☆☆☆☆ o más</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="servicioFiltro" class="form-label">Tipo de servicio</label>
                                <select id="servicioFiltro" name="servicio" class="form-select">
                                    <option value="">Todos</option>
                                    <option value="Parque de Cuerdas">Parque de Cuerdas</option>
                                    <option value="Pared de Escalada">Pared de Escalada</option>
                                    <option value="Roll Glider">Roll Glider</option>
                                </select>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-Primary-ExpOxi">
                                    <i class="fas fa-search me-2"></i>Aplicar filtros
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="testimonials-container">
                        @if (reviews != null && reviews.Any())
                        {
                            foreach (var item in reviews)
                            {
                                <div class="testimonial-card">
                                    <div class="testimonial-header">
                                        <div class="testimonial-avatar">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="testimonial-info">
                                            <h5>@item.Nombre</h5>
                                            <div class="testimonial-rating">
                                                @Html.Raw(new string('★', item.Calificacion))@Html.Raw(new string('☆', 5 - item.Calificacion))
                                            </div>
                                            <div class="testimonial-service">@item.Servicio</div>
                                        </div>
                                    </div>
                                    <div class="testimonial-body">
                                        <p>@item.Comentario</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info text-center">
                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                <h5>No hay reseñas disponibles</h5>
                                <p>Sé el primero en dejar tu opinión sobre nuestras experiencias.</p>
                            </div>
                        }
                    </div>

                    <div class="review-form-card mt-5">
                        <h4><i class="fas fa-comment-alt me-2"></i>Comparte tu Experiencia</h4>

                        @if (!Request.IsAuthenticated)
                        {
                            <div class="login-required-message">
                                <i class="fas fa-lock mb-3"></i>
                                <h5>Inicia sesión para dejar tu reseña</h5>
                                <p>Nos encantaría conocer tu opinión sobre nuestros servicios</p>
                                <button type="button" class="btn btn-Primary-ExpOxi" data-bs-toggle="modal" data-bs-target="#loginRequiredModal">
                                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar sesión
                                </button>
                            </div>
                        }
                        else
                        {
                            <form method="post" action="/Home/Index" onsubmit="return validarComentario()">
                                @Html.AntiForgeryToken()

                                <div class="mb-3">
                                    <label for="Servicio" class="form-label">Tipo de servicio</label>
                                    <select class="form-select" id="Servicio" name="Servicio" required>
                                        <option value="">Seleccione un servicio</option>
                                        <option value="Parque de Cuerdas">Parque de Cuerdas</option>
                                        <option value="Pared de Escalada">Pared de Escalada</option>
                                        <option value="Roll Glider">Roll Glider</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="Calificacion" class="form-label">¿Cómo calificarías tu experiencia?</label>
                                    <div class="star-rating">
                                        <input type="radio" id="star5" name="Calificacion" value="5" required />
                                        <label for="star5"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star4" name="Calificacion" value="4" />
                                        <label for="star4"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star3" name="Calificacion" value="3" />
                                        <label for="star3"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star2" name="Calificacion" value="2" />
                                        <label for="star2"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star1" name="Calificacion" value="1" />
                                        <label for="star1"><i class="fas fa-star"></i></label>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="Comentario" class="form-label">Tu comentario</label>
                                    <textarea class="form-control" id="Comentario" name="Comentario" rows="4"
                                              placeholder="Comparte tu experiencia con nosotros..." minlength="4" required></textarea>
                                    <div id="comentario-error" class="text-danger mt-1" style="display:none;">
                                        El comentario debe tener al menos 4 caracteres.
                                    </div>
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-Primary-ExpOxi">
                                        <i class="fas fa-paper-plane me-2"></i>Enviar reseña
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
